{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "module": "NodeNext",
    "baseUrl": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
